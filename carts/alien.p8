function side(o)
 local x1=o.x/8 
 local x2=(o.x+7)/8
 local y2=(o.y+7)/8
 
 local a =fget(mget(x1,y2),0)
 local b =fget(mget(x2,y2),0)
 local c =fget(mget(x2,y1),0)
 local d =fget(mget(x1,y1),0)
 
 if a or b or c or d then
  return 
  true 
 else 
  return
  false
 end
